<div class="container mt-4">
  <h1 class="mb-4">Пост</h1>

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>

  <%= render @post %>

  <div class="mt-4">
    <%= link_to "Изменить пост", edit_post_path(@post), class: "btn btn-primary mr-2" %>
    <%= link_to "Вернуться к просмотру постов", posts_path, class: "btn btn-secondary mr-2" %>
  </div>

  <div class="mt-3">
    <%= button_to "Удалить данный пост", @post, method: :delete, data: { confirm: "Вы уверены?" }, class: 'btn btn-danger' %>
  </div>
</div>

