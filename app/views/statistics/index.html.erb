<!-- app/views/statistics/index.html.erb -->
<div class="container">
  <h1>Статистика</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Пользователь</th>
        <th>Личные посты сегодня</th>
        <th>Общие посты сегодня</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.posts_count %></td>
          <td><%= Post.where(created_at: (Time.zone.now.beginning_of_day..Time.zone.now.end_of_day)).count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>