<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="mb-4">Настройки пользователя</h1>

      <%= form_for(current_user, url: user_path(current_user), method: :put, class: 'needs-validation', novalidate: true) do |f| %>
        <div class="mb-3">
          <%= f.label :digest_frequency, 'Настройка дайджеста', class: 'form-label' %>
          <%= f.select :digest_frequency, User.digest_frequencies.keys, prompt: 'Выберите настройку', class: 'form-select' %>
        </div>

        <div class="mb-3">
          <%= f.label :email, 'Новый email', class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        
        <div class="mb-3">
          <%= f.submit 'Обновить настройки', class: 'btn btn-primary' %>
        </div>

        <%= form_for(current_user, url: update_username_user_path(current_user), method: :patch, class: 'needs-validation', novalidate: true) do |username_form| %>
          <div class="mb-3">
            <%= username_form.label :username, 'Новое имя пользователя', class: 'form-label' %>
            <%= username_form.text_field :username, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= username_form.submit 'Изменить имя пользователя', class: 'btn btn-primary' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

